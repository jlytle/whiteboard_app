<div class="bubble_boxes">
	
	<h1><%= @post.post_title.titleize %></h1>

	<h2><%= simple_format(@post.post_body) %></h2>

	<h3><%= "#{@post.user.first_name} #{@post.user.last_name} - #{time_ago_in_words @post.created_at} ago" %></h3>

	<%= link_to 'Edit', edit_post_path(@post) %>
	<%= link_to 'Back', posts_path %>
	<%= link_to 'Comment', '#' %>
</div>
